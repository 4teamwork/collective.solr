<div id="portal-searchfacets"
     i18n:domain="plone">

 <h4 i18n:translate="heading_search_facets">
   Limit search results...
 </h4>

 <div tal:repeat="facet view/facets" i18n:domain="solr">
   <h5 tal:content="facet/title" i18n:translate="" />
   <dl>
     <tal:counts repeat="item facet/counts">
       <tal:count define="count item/count"
                  condition="count">
         <dt tal:content="item/name" />
         <dd tal:content="item/count" />
       </tal:count>
     </tal:counts>
   </dl>
 </div>

</div>
